        {% extends 'base.html.twig' %}

        {% block title %}Aurea - Gastronomy & Design{% endblock %}

        {% block body %}
            {# relative min-h-screen bg-rich-green overflow-hidden #}
            <main class="" >

                <div class="absolute inset-0 bg-rich-green"
                     style="background-image: url('{{ asset('images/hero_bg.svg') }}'); background-size: cover;">
                </div>
                {# "relative z-10 #}
                {# --- NAVBAR CENTRÉE (Style XD - Sans Logo) --- #}
                <nav class="fixed top-0 w-full z-50 bg-rich-green/90 py-8 backdrop-blur-sm shadow-xl">
                    <div class="container mx-auto flex justify-center items-center">
                        <div class="flex items-center" style="text-transform: uppercase; gap: clamp(1.5rem, 4vw, 5rem);">

                            {# <a href="#home" class="nav-link">Domů</a> #}
                            <a href="#poldeni-menu" class="nav-link">POLEDNÍ MENU</a>
                            <a href="#stala-nabidka" class="nav-link">Speciální nabídka</a>
                            <a href="#restauraci" class="nav-link">restauraci</a>
                            <a href="#recenze" class="nav-link">recenze</a>
                            <a href="#gallery" class="nav-link">Galerie</a>
                            <a href="#kontakt" class="nav-link">O nás</a>

                            {# Bouton Contact avec l'effet rectangle #}
                            <a href="#contact" class="btn-nav-contact">Kontakt</a>
                        </div>
                    </div>
                </nav>

                {# --- HERO SECTION (3 colonnes alignées en Row) --- #}
                <section id="home" class="relative min-h-screen w-full flex flex-col justify-center overflow-hidden bg-rich-green">

                    {# Conteneur Principal en Grid pour l'équilibre parfait #}
                    <div class="grid grid-cols-1 md:grid-cols-4 w-full h-full items-center px-4 md:px-10">

                        {# Image Gauche - Positionnée très à gauche #}
                        <div class="hidden md:flex justify-start">
                            <div class="aspect-[3/5] w-full max-w-[350px] overflow-hidden shadow-2xl transition-transform duration-700 hover:scale-105">
                                <img src="{{ asset('images/hero-left.jpg') }}" class="w-full h-full object-cover grayscale-[20%] hover:grayscale-0 transition-all">
                            </div>
                        </div>

                        {# Bloc Central - Prend 2 colonnes (50% de l'espace) #}
                        <div class="col-span-1 md:col-span-2 flex flex-col items-center text-center space-y-10 z-10">
                            <div class="animate-fade-in">
                                <p class="uppercase tracking-[0.6em] text-[10px] md:text-sm text-dark-rose mb-4">Aurea Collection</p>
                                <h1 class="text-6xl md:text-8xl lg:text-[120px] font-seasons !leading-[0.8] text-light-rose uppercase">
                                    The<br><span class="ml-4 md:ml-12">Seasons</span>
                                </h1>
                                <p class="font-balto text-sm md:text-base text-light-rose/70 max-w-md mx-auto mt-8 leading-relaxed italic">
                                    Expérience gastronomique unique au cœur de la ville, <br> où chaque saison raconte une nouvelle histoire.
                                </p>
                            </div>

                            {# Les Deux Boutons côte à côte #}
                            <div class="flex flex-col md:flex-row gap-6 mt-4">
                                <a href="#daily-menu" class="btn-nav-contact">Jídelní lístek</a>
                                <a href="#reservation" class="btn-aurea-outline">Rezervace</a>
                            </div>
                        </div>

                        {# Image Droite - Positionnée très à droite #}
                        <div class="hidden md:flex justify-end">
                            <div class="aspect-[3/5] w-full max-w-[350px] overflow-hidden shadow-2xl transition-transform duration-700 hover:scale-105">
                                <img src="{{ asset('images/hero-right.jpg') }}" class="w-full h-full object-cover grayscale-[20%] hover:grayscale-0 transition-all">
                            </div>
                        </div>
                    </div>

                    {# La Flèche vers le bas (Scroll Indicator) #}
                    <div class="absolute bottom-10 left-1/2 -translate-x-1/2 flex flex-col items-center animate-bounce">
                        <span class="text-[10px] uppercase tracking-widest text-light-rose/40 mb-2">Explore</span>
                        <a href="#daily-menu" class="text-light-rose/60">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M7 13l5 5 5-5M7 6l5 5 5-5"/>
                            </svg>
                        </a>
                    </div>

                </section>


                {# --- JÍDELNÍ LÍSTEK (Menu Gastronomique) --- #}
                {# Section: Polední menu (Daily Menu) #}
                <section id="poldeni-menu" class="py-20 bg-rich-green">
                    {# Le conteneur qui centre tout avec une largeur max élégante (ex: 800px) #}
                    <div class="max-w-4xl mx-auto px-6 md:px-12">

                        {# Titre de la section centré #}
                        <div class="text-center mb-16">
                            <h2 class="font-seasons text-4xl md:text-5xl uppercase tracking-[0.3em] text-light-rose">
                                POLEDNÍ MENU
                            </h2>
                            <div class="w-20 h-[1px] bg-dark-rose mx-auto mt-6 opacity-60"></div>

                            {% if currentMenu and currentMenu is iterable %}
                                <p class="font-balto text-sm uppercase tracking-widest text-light-rose/60 mt-6">
                                    Valid from {{ currentMenu.startDate|date('d.m.') }}
                                    to {{ currentMenu.endDate|date('d.m.Y') }}
                                </p>
                            {% endif %}
                        </div>

                        {#  oo #}
                        {% for item in currentMenu.dailyMenuItems %}
                            <div class="group flex flex-col mb-10 transition-all duration-500 ease-in-out hover:translate-x-2 animate-fade-in">

                                {# 1. TITRE (Au-dessus) #}
                                <h3 class="font-seasons text-lg md:text-xl uppercase tracking-widest text-light-rose mb-1 transition-colors duration-500 group-hover:text-dark-rose">
                                    {{ item.title }}
                                </h3>

                                {# 2. BLOC ALIGNÉ : Description + Pointillés + Prix #}
                                <div class="flex items-baseline w-full">

                                    {# Description (occupe l'espace nécessaire, ne dépasse pas 60% pour laisser de la place aux pointillés) #}
                                    {% if item.description %}
                                        <p class="font-balto text-sm italic opacity-70 text-light-rose/90 leading-relaxed uppercase tracking-tighter max-w-[60%] shrink-0">
                                            {{ item.description }}
                                        </p>
                                    {% else %}
                                        {# Fallback si pas de description pour garder l'alignement #}
                                        <span class="font-balto text-sm italic opacity-40">Détails à venir</span>
                                    {% endif %}

                                    {# Pointillés (s'étirent entre la description et le prix) #}
                                    <div class="flex-grow mx-4 border-b border-dotted border-light-rose/30 h-[1px] relative -top-1 transition-all duration-500 group-hover:border-dark-rose/50"></div>

                                    {# Prix #}
                                    <span class="font-balto text-xl text-dark-rose font-bold transition-transform duration-500 group-hover:scale-110">
                                {{ item.price }}€
                            </span>
                                </div>
                            </div>
                        {% endfor %}
                        {# oo #}


                    </div>
                </section>

                {# --- PARTENAIRE ALBATROSS (Avant le Footer) --- #}
                <section class="py-20 bg-rich-green border-t border-light-rose/10 text-center">
                    <p class="uppercase tracking-[0.3em] text-[10px] opacity-50 mb-8">Navštivte naše golfové hřiště</p>
                    <a href="https://albatross.cz/cs/" target="_blank" rel="noopener" class="btn-aurea !text-sm">
                        Hřiště Albatross Website
                    </a>
                </section>

                {# --- FOOTER --- #}
                <footer class="bg-footer-dark py-20 px-12 border-t border-white/5">
                    <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-end gap-10">
                        <div class="footer-text-left text-[15px] leading-relaxed">
                            <p class="font-bold mb-2 uppercase tracking-widest text-light-rose">Smart Catering s.r.o.</p>
                            IČ 24404608 | DIČ CZ24404608<br>
                            Křižovnická 86/6 Praha 11000
                        </div>

                        <div class="footer-text-right text-[15px] text-right opacity-60">
                            <p>Website design and programming</p>
                            <p class="font-bold uppercase tracking-widest text-white">Toli Code & Design</p>
                        </div>
                    </div>
                </footer>

            </main>

        {% endblock %}
